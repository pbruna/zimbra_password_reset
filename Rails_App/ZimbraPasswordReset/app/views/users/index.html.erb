<div style="float: right; margin-top: 5px">
	<%= link_to "<i class='icon-plus icon-white'></i> Agregar Usuario".html_safe , new_user_path(), 
		:class => "btn btn-primary btn-small", :id => "new_user_button", "data-remote" => new_user_path(), :remote => true%>
</div>
<h2>Usuarios Administradores</h2>
<table id="admins" class="table table-striped table-condensed">
	<tbody>
		<tr>
			<th>Email</th>
			<th>Nombre</th>
			<th>Acciones</th>
		</tr>
		<% @users.each do |user| %>
			<%= render :partial => "user", :locals => {:user => user}%>
		<% end %>
	</tbody>
</table>

<div id="user_modal"/>