<% if @user.errors.size > 0 %>
	$("#user_form").modal("hide");
	$("#user_form.modal").remove();
	$('#user_modal').append('<%= j render("modal_user_form")%>');
	$("#user_form").modal("show");
<% else %>
	$("#user_form").modal("hide");
	$("#user_form.modal").remove();
	$("#<%= @user.id %>").replaceWith('<%= j render(:partial => "user", :locals => {:user => @user}) %>');
	$("#<%= @user.id %>").effect("highlight", null, 1500);
<% end %>